use Mix.Config

config :your_app, YourappWeb.Endpoint,
  secret_key_base: "<%= @envs[:SECRET_KEY_BASE] %>"

# Configure your database
config :yourapp, Yourapp.Repo,
  adapter: Ecto.Adapters.Postgres,
  username: "<%= @envs[:DB_USERNAME] %>",
  password: "<%= @envs[:DB_PASSWORD] %>",
  database: "<%= @envs[:DB_NAME] %>",
  pool_size: <%= @envs[:DB_POOLSIZE] %>

config :yourapp, Yourapp.Mailer,
  adapter: Bamboo.SendGridAdapter,
  api_key: "<%= @envs[:SENDGRID_API_PROD] %>"

config :your_app, YourappWeb.Endpoint,
  load_from_system_env: true,
  http: [ip: {127, 0, 0, 1}, port: "<%= @envs[:PORT] %>"],
  url: [scheme: "<%= @envs[:APP_SCHEME] %>", host: "<%= @envs[:APP_HOST] %>", port: "<%= @envs[:APP_PORT] %>"],
  static_url: [scheme: "<%= @envs[:APP_SCHEME] %>", host: "<%= @envs[:APP_STATIC_HOST] %>", port: "<%= @envs[:APP_PORT] %>"],
  cache_static_manifest: "priv/static/cache_manifest.json"
